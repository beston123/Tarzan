## 一级二级菜单
#set($leftLevel1 = 'server')
#set($leftLevel2 = 2)

## 面包屑
#parse("include/breadcrumbs.vm")
#breadcrumbs(["/server/list",""],["服务端","Id列表"])

## 主面板
<div class="row">
    <div class="col-xs-12">

        <!--h3 class="header smaller lighter blue">jQuery dataTables</h3-->

        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>
        <div class="table-header">
            服务端－Id列表
        </div>

        <!-- div.table-responsive -->

        <!-- div.dataTables_borderWrap -->
        <div>
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th class="center">
                        <label class="pos-rel">
                            <span class="lbl">序号</span>
                        </label>
                    </th>
                    <th class="center">ServerId</th>
                    <th class="center">IP:端口</th>
                    <th class="center">状态</th>
                    <th>操作</th>
                </tr>
                </thead>

                <tbody>
                    #foreach($!{item} in $!{data})
                    <tr>
                        <td class="center">
                            $foreach.count
                        </td>
                        <td class="center">$!{item.serverId}</td>
                        <td>$!{item.address}</td>
                        <td class="center">
                            #if($!{item.address})
                                <span class="label label-sm label-grey">占用</span>
                            #else
                                <span class="label label-sm label-success">可用</span>
                            #end
                        </td>

                        <td>
                            <div class="hidden-sm hidden-xs action-buttons">
                                <!--a class="blue" href="#">
                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                </a>

                                <a class="green" href="#">
                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                    </a-->
                            #if($!{item.address})
                                <a class="red" href="#" title="释放" onclick="releaseId('$!{item.serverId}')">
                                    <i class="ace-icon fa fa-unlock bigger-130"></i>
                                </a>
                            #end
                            </div>
                        </td>
                    </tr>
                    #end

                </tbody>
            </table>
        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->

#parse("commons/message.vm")

<script>
    //释放
    function releaseId(serverId) {

        showConfirmPopUp("确认","确定要释放ServerId '"+serverId+"' 吗？", function confirmCallback(formData){
            $.ajax({
                cache: true,
                type: "DELETE",
                url: "${ac.contextPath}/server/id/"+serverId,
                data: null,
                async: false,
                error: function (request) {
                    showErrorPopUp("操作超时！");
                },
                success: function (data) {
                    var result = data;
                    showPopUp(result.status, result.message);
                    if (result.status == 1) {
                        setTimeout(location.reload(), 2000);
                    }
                }
            });
        }, serverId);
    }
</script>